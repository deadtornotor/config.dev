configuration {
    modi: "window,drun,ssh,combi,calc,filebrowser";
	font: "JetBrainsMono Nerf Font 12";
	show-icons: true;
	terminal: "ghostty";
    combi-modi: "window,drun,filebrowser";
  timeout {
      action: "kb-cancel";
      delay:  0;
  }
  filebrowser {
      directories-first: true;
      sorting-method:    "name";
  }
}

@theme "style.rasi"
