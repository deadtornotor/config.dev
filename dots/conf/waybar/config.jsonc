{
    "layer": "top",
    "position": "top",
    "height": 35,
    // "width": 1350,
    "margin": "3, 3, 0, 3",
    // Choose the order of the modules
    "modules-left": [
        "hyprland/workspaces",
        "custom/separator",
        "cpu",
        "custom/separator",
        "memory",
        "custom/separator",
        "temperature",
        "custom/separator",
        "custom/recorder",
        "custom/audiorec"
    ],
    "modules-center": [
        "hyprland/window"
    ],
    "modules-right": [
        // "idle_inhibitor",
        "tray",
        "custom/separator",
        "custom/epp",
        "custom/separator",
        "backlight",
        "battery",
        "wireplumber",
        "custom/separator",
        "network",
        "custom/separator",
        "clock",
    ],
    // Modules configuration
    "hyprland/window": {
        "max-length": 200,
        "seperate-outputs": true
    },
    "hyprland/workspaces": {
        "format": "{icon}",
        "format-icons": {
            "1": "ï‰© ",
            "2": "ï„¡ ",
            "3": "ï„  ",
            "11": "ï‰© ",
            "12": "ïµ ",
            "13": "ï†¼ ",
            "urgent": "ïª ",
            "focused": "ï†’ "
        },
        "on-scroll-up": "hyprctl dispatch workspace e+1",
        "on-scroll-down": "hyprctl dispatch workspace e-1"
    },
    "custom/epp": {
        "exec": "~/.config/waybar/scripts/epp-toggle.sh",
        "format": " {} ",
        "interval": "once",
        "tooltip": true,
        "signal": 9,
        "on-click": "~/.config/waybar/scripts/epp-toggle.sh next; pkill -SIGRTMIN+9 waybar",
    },
    "custom/language": {
        "exec": "swaymsg --type get_inputs | grep \"xkb_active_layout_name\" | sed -u '1!d; s/^.*xkb_active_layout_name\": \"//; s/ (US)//; s/\",//' && swaymsg --type subscribe --monitor '[\"input\"]' | sed -u 's/^.*xkb_active_layout_name\": \"//; s/\",.*$//; s/ (US)//'"
    },
    "custom/separator": {
        "format": "|",
        "interval": "once",
        "tooltip": false
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ï® ",
            "deactivated": "ï° "
        }
    },
    "tray": {
        "icon-size": 20,
        "spacing": 6
    },
    "clock": {
        "interval": 1,
        "locale": "C",
        "format": "ï€— {:%I:%M %p}",
        "format-alt": "ï³ {:%a,%b %d}", // Icon: calendar-alt
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    },
    "cpu": {
        "format": "ï‹›&#8239; {usage}%",
        "tooltip": false,
        "on-click": "kitty -e 'htop'"
    },
    "memory": {
        "format": "ïƒ‰  {percentage}%"
    },
    "temperature": {
        "thermal-zone": 1,
        "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "critical-threshold": 80,
        "format-critical": "{temperatureC}Â°C {icon}",
        "format": "{icon}&#8239; {temperatureC}Â°C",
        "format-icons": [
            "ï‹‰",
            "ï‹‰",
            "ï‹‰"
        ]
    },
    "backlight": {
        // "device": "acpi_video1",
        "format": "{icon}&#8239;{percent}%",
        "format-icons": [
            "ğŸ’¡",
            "ğŸ’¡"
        ],
        "on-scroll-down": "brightnessctl -c backlight set 1%-",
        "on-scroll-up": "brightnessctl -c backlight set +1%"
    },
    "battery": {
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{icon}&#8239; {capacity}%",
        "format-charging": "ïƒ§&#8239;{capacity}%",
        "format-plugged": "ïƒ§&#8239;{capacity}%",
        "format-alt": "{icon} {time}",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": [
            "ï‰„ ",
            "ï‰ƒ ",
            "ï‰‚ ",
            "ï‰ ",
            "ï‰€ "
        ]
        // "format-icons": ["ï‰„", "ï‰ƒ", "ï‰‚", "ï‰", "ï‰€"]
    },
    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format-wifi": "ï‡« &#8239;  ({signalStrength}%)",
        "format-ethernet": "&#8239;{ifname}: {ipaddr}/{cidr}",
        "format-linked": "&#8239;{ifname} (No IP)",
        "format-disconnected": "âœˆ &#8239; Disconnected",
        "format-alt": "{ifname}: {ipaddr}/{cidr}",
        "tooltip-format": "{essid}: {ipaddr}"
    },
    "wireplumber": {
        "format": "{volume}% {icon}",
        "format-muted": "ï‘¦ ",
        // "scroll-step": 1, // %, can be a float
        // "format": "{icon}  {volume}% {format_source}",
        // "format-bluetooth": "{icon}ïŠ” {volume}% {format_source}",
        // "format-bluetooth-muted": "ï‘¦ {format_source}",
        // "format-muted": "ï‘¦  {format_source}",
        // "format-source": "ï„° {volume}%",
        // "format-source-muted": "ï„±",
        "format-icons": [
            "ï€¦ ",
            "ï€§ ",
            "ï€¨ "
        ],// {
        // "headphone": "ï€¥ ",
        // "hands-free": "ï– ",
        // "headset": "ğŸ§",
        // "phone": "ï‚• ",
        // "portable": "ï‚• ",
        // "car": "ï†¹ ",
        // "default": ["ï€¦", "ï€§ ", "ï€¨ "]
        // },
        "on-click": "pavucontrol"
    },
    "mpd": {
        "format": "{stateIcon} {artist} - {title}",
        "format-disconnected": "ğŸ¶",
        "format-stopped": "â™ª",
        "interval": 10,
        "consume-icons": {
            "on": "ïƒ„ " // Icon shows only when "consume" is on
        },
        "random-icons": {
            "off": "<span color=\"#f53c3c\">ï´</span> ", // Icon grayed out when "random" is off
            "on": "ï´ "
        },
        "repeat-icons": {
            "on": "ï€ "
        },
        "single-icons": {
            "on": "ï€ "
        },
        "state-icons": {
            "paused": "ïŒ",
            "playing": "ï‹"
        },
        "tooltip-format": "MPD (connected)",
        "tooltip-format-disconnected": "MPD (disconnected)",
        "max-length": 45
    },
    "custom/recorder": {
        "format": "ï€½ Rec",
        "format-disabled": "ï€½ Off-air", //An empty format will hide the module.
        "return-type": "json",
        "interval": 1,
        "exec": "echo '{\"class\": \"recording\"}'",
        "exec-if": "pgrep wf-recorder",
    },
    "custom/audiorec": {
        "format": "â™¬ Rec",
        "format-disabled": "â™¬ Off-air", //An empty format will hide the module.
        "return-type": "json",
        "interval": 1,
        "exec": "echo '{\"class\": \"audio recording\"}'",
        "exec-if": "pgrep ffmpeg",
    },
}
