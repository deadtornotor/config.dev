{
    "layer": "top",
    "position": "top",
    "height": 35,
    // "width": 1350,
    "margin": "3, 3, 0, 3",
    // Choose the order of the modules
    "modules-left": [
        "hyprland/workspaces",
        "custom/separator",
        "cpu",
        "custom/separator",
        "memory",
        "custom/separator",
        "temperature",
        "custom/separator",
        "custom/recorder",
        "custom/audiorec"
    ],
    "modules-center": [
        "hyprland/window"
    ],
    "modules-right": [
        // "idle_inhibitor",
        "tray",
        "custom/separator",
        "custom/epp",
        "custom/separator",
        "backlight",
        "battery",
        "wireplumber",
        "custom/separator",
        "network",
        "custom/separator",
        "clock",
        "custom/separator",
        "custom/power",
    ],
    // Modules configuration
    "hyprland/window": {
        "max-length": 200,
        "seperate-outputs": true
    },
    "hyprland/workspaces": {
        "format": "{icon}",
        "format-icons": {
            "1": "Ôâ© ",
            "2": "ÔÑ° ",
            "3": "ÔÑ† ",
            "11": "Ôâ© ",
            "12": "ÔÅµ ",
            "13": "ÔÜº ",
            "urgent": "ÔÅ™ ",
            "focused": "ÔÜí "
        },
        "on-scroll-up": "hyprctl dispatch workspace e+1",
        "on-scroll-down": "hyprctl dispatch workspace e-1"
    },
    "custom/epp": {
        "exec": "~/.config/waybar/scripts/epp-toggle.sh",
        "format": " {} ",
        "interval": "once",
        "tooltip": true,
        "signal": 9,
        "on-click": "$HOME/.config/waybar/scripts/epp-toggle.sh next; pkill -SIGRTMIN+9 waybar",
    },
    "custom/language": {
        "exec": "swaymsg --type get_inputs | grep \"xkb_active_layout_name\" | sed -u '1!d; s/^.*xkb_active_layout_name\": \"//; s/ (US)//; s/\",//' && swaymsg --type subscribe --monitor '[\"input\"]' | sed -u 's/^.*xkb_active_layout_name\": \"//; s/\",.*$//; s/ (US)//'"
    },
    "custom/separator": {
        "format": "|",
        "interval": "once",
        "tooltip": false
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ ",
            "deactivated": "ÔÅ∞ "
        }
    },
    "tray": {
        "icon-size": 20,
        "spacing": 6
    },
    "clock": {
        "interval": 1,
        "locale": "C",
        "format": "ÔÄó {:%I:%M %p}",
        "format-alt": "ÔÅ≥ {:%a,%b %d}", // Icon: calendar-alt
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    },
    "cpu": {
        "format": "Ôãõ&#8239; {usage}%",
        "tooltip": false,
        "on-click": "kitty -e 'htop'"
    },
    "memory": {
        "format": "ÔÉâ  {percentage}%"
    },
    "temperature": {
        "thermal-zone": 1,
        "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "critical-threshold": 80,
        "format-critical": "{temperatureC}¬∞C {icon}",
        "format": "{icon}&#8239; {temperatureC}¬∞C",
        "format-icons": [
            "Ôãâ",
            "Ôãâ",
            "Ôãâ"
        ]
    },
    "backlight": {
        // "device": "acpi_video1",
        "format": "{icon}&#8239;{percent}%",
        "format-icons": [
            "üí°",
            "üí°"
        ],
        "on-scroll-down": "brightnessctl -c backlight set 1%-",
        "on-scroll-up": "brightnessctl -c backlight set +1%"
    },
    "battery": {
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{icon}&#8239; {capacity}%",
        "format-charging": "ÔÉß&#8239;{capacity}%",
        "format-plugged": "ÔÉß&#8239;{capacity}%",
        "format-alt": "{icon} {time}",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": [
            "ÔâÑ ",
            "ÔâÉ ",
            "ÔâÇ ",
            "ÔâÅ ",
            "ÔâÄ "
        ]
        // "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },
    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format-wifi": "Ôá´ &#8239;  ({signalStrength}%)",
        "format-ethernet": "&#8239;{ifname}: {ipaddr}/{cidr}",
        "format-linked": "&#8239;{ifname} (No IP)",
        "format-disconnected": "‚úà &#8239; Disconnected",
        "format-alt": "{ifname}: {ipaddr}/{cidr}",
        "tooltip-format": "{essid}: {ipaddr}"
    },
    "wireplumber": {
        "format": "{volume}% {icon}",
        "format-muted": "Ôë¶ ",
        // "scroll-step": 1, // %, can be a float
        // "format": "{icon}  {volume}% {format_source}",
        // "format-bluetooth": "{icon}Ôäî {volume}% {format_source}",
        // "format-bluetooth-muted": "Ôë¶ {format_source}",
        // "format-muted": "Ôë¶  {format_source}",
        // "format-source": "ÔÑ∞ {volume}%",
        // "format-source-muted": "ÔÑ±",
        "format-icons": [
            "ÔÄ¶ ",
            "ÔÄß ",
            "ÔÄ® "
        ], // {
        // "headphone": "ÔÄ• ",
        // "hands-free": "Ôñê ",
        // "headset": "üéß",
        // "phone": "ÔÇï ",
        // "portable": "ÔÇï ",
        // "car": "ÔÜπ ",
        // "default": ["ÔÄ¶", "ÔÄß ", "ÔÄ® "]
        // },
        "on-click": "pavucontrol"
    },
    "mpd": {
        "format": "{stateIcon} {artist} - {title}",
        "format-disconnected": "üé∂",
        "format-stopped": "‚ô™",
        "interval": 10,
        "consume-icons": {
            "on": "ÔÉÑ " // Icon shows only when "consume" is on
        },
        "random-icons": {
            "off": "<span color=\"#f53c3c\">ÔÅ¥</span> ", // Icon grayed out when "random" is off
            "on": "ÔÅ¥ "
        },
        "repeat-icons": {
            "on": "ÔÄû "
        },
        "single-icons": {
            "on": "ÔÄû "
        },
        "state-icons": {
            "paused": "ÔÅå",
            "playing": "ÔÅã"
        },
        "tooltip-format": "MPD (connected)",
        "tooltip-format-disconnected": "MPD (disconnected)",
        "max-length": 45
    },
    "custom/recorder": {
        "format": "ÔÄΩ Rec",
        "format-disabled": "ÔÄΩ Off-air", //An empty format will hide the module.
        "return-type": "json",
        "interval": 1,
        "exec": "echo '{\"class\": \"recording\"}'",
        "exec-if": "pgrep wf-recorder",
    },
    "custom/audiorec": {
        "format": "‚ô¨ Rec",
        "format-disabled": "‚ô¨ Off-air", //An empty format will hide the module.
        "return-type": "json",
        "interval": 1,
        "exec": "echo '{\"class\": \"audio recording\"}'",
        "exec-if": "pgrep ffmpeg",
    },
    "custom/power": {
        "tooltip": false,
        "format": "{icon}",
        "format-icons": [
            "‚èª ",
        ],
        "on-click": "$HOME/.config/waybar/scripts/poweroff.sh"
    },
}
